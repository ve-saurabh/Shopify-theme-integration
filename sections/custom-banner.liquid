<section class="cwr-banner">
  <div class="cwr-banner__wrap js-banner-wrap">
    {% for block in section.blocks %}        
        <div class="cwr-banner__img {% case block.settings.banner_position %} {% when 'top' %}cwr-banner-img-top {% when 'center' %} cwr-banner-img-center {% when 'bottom' %} cwr-banner-img-bottom {% endcase %}">
          <div class="cwr-banner__bg-img">
            {%- if block.settings.desktop_image != blank -%}
              <img
                src="{{ block.settings.desktop_image |  image_url  }}"
                alt="hero-img"
                class="img-fluid lazyload"
                width="1903"
                height="483">
            {%- endif -%}
          </div>
          {%- if block.settings.mobile_image and block.settings.banner_position == "top" -%}            
            <div class="cwr-banner__img-mobile">
              {%- if block.settings.mobile_image != blank -%}
                <img
                  src="{{ block.settings.mobile_image |  image_url  }}"
                  alt="hero-img"
                  class="img-fluid lazyload"
                  width="991"
                  height="665">
              {%- endif -%}
            </div>
          {%- endif -%}
          <div class="cwr-banner__wrap-content">
            <div class="cwr-rating">
              <ul>
                {%- for i in (1..5) -%}                  
                    <li><img
                        src="{{ 'rating-star.svg' |  file_url }}"
                        alt="star icon"
                        class="img-fluid"
                        height=""
                        width="" /></li>
                {%- endfor -%}
              </ul>
              {%- if block.settings.rating != blank -%}
                <span>{{ block.settings.rating }}</span>
              {%- endif -%}
            </div>
            {%- if block.settings.main_heading != blank -%}
              <h1 class="custom-heading-xl">{{ block.settings.main_heading }}</h1>
            {%- endif -%}
            {%- if block.settings.sub_heading != blank -%}
              <h4 class="custom-heading-sm">{{ block.settings.sub_heading }}</h4>
            {%- endif -%}
            {%- if block.settings.button_url != blank -%}
              <a href="{{ block.settings.button_url }}" class="custom-btn">
                {%- if block.settings.button_text != blank -%}
                  <span>{{ block.settings.button_text }}<svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="15"
                      viewBox="0 0 18 15"
                      fill="none">
                      <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M11.3429 0.292893L17.7069 6.65685C18.0974 7.04738 18.0974 7.68054 17.7069 8.07107L11.3429 14.435C10.9524 14.8256 10.3192 14.8256 9.92869 14.435C9.53816 14.0445 9.53816 13.4113 9.92869 13.0208L14.5855 8.36396H0.999756C0.447471 8.36396 -0.000244141 7.91625 -0.000244141 7.36396C-0.000244141 6.81168 0.447471 6.36396 0.999756 6.36396H14.5855L9.92869 1.70711C9.53816 1.31658 9.53816 0.683418 9.92869 0.292893C10.3192 -0.0976311 10.9524 -0.0976311 11.3429 0.292893Z"
                        fill="black" />
                    </svg>
                  </span>
                {%- endif -%}
              </a>
            {%- endif -%}
            {%- if block.settings.mobile_image_2 and block.settings.banner_position == "bottom" -%}
              <div class="cwr-banner__img-mobile">
                {%- if block.settings.mobile_image_2 != blank -%}
                  <img
                    src="{{ block.settings.mobile_image_2 | image_url }}"
                    alt="hero-img"
                    class="img-fluid "
                    height=""
                    width="">
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
    {% endfor %}
  </div>
</section>

