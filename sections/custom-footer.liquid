<footer>
  <div class="container">
    <div class="footer-wrap desktop-footer">
      {% for block in section.blocks %}
        <div class="footer-wrap-content">
          <h4>{{ block.settings.heading }}</h4>
          {% if block.type == 'menu_block' %}
            <ul>
              {% for link in linklists[block.settings.menu].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% elsif block.type == 'social_block' %}
            <ul class="social-icon">
              {% if block.settings.show_facebook %}
                <li>
                  <a href="{{ block.settings.facebook_url }}">
                    <img
                      src="{{ block.settings.facebook_icon | image_url: '32x32' | default: 'facebook-icon.svg' | file_url }}"
                      alt="Facebook"
                      class="img-fluid"
                      height=""
                      width="" />
                    {{ block.settings.facebook_label }}
                  </a>
                </li>
              {% endif %}
              {% if block.settings.show_twitter %}
                <li>
                  <a href="{{ block.settings.twitter_url }}">
                    <img
                      src="{{ block.settings.twitter_icon | image_url: '32x32' | default: 'twitter-icon.svg' | file_url }}"
                      alt="Twitter"
                      class="img-fluid"
                      height=""
                      width="" />
                    {{ block.settings.twitter_label }}
                  </a>
                </li>
              {% endif %}
              {% if block.settings.show_instagram %}
                <li>
                  <a href="{{ block.settings.instagram_url }}">
                    <img
                      src="{{ block.settings.instagram_icon | image_url: '32x32' | default: 'insta-icon.svg' | file_url }}"
                      alt="Instagram"
                      class="img-fluid"
                      height=""
                      width="" />
                    {{ block.settings.instagram_label }}
                  </a>
                </li>
              {% endif %}
              {% if block.settings.show_youtube %}
                <li>
                  <a href="{{ block.settings.youtube_url }}">
                    <img
                      src="{{ block.settings.youtube_icon | image_url: '32x32' | default: 'youtube-icon.svg' | file_url }}"
                      alt="YouTube"
                      class="img-fluid"
                      height=""
                      width="" />
                    {{ block.settings.youtube_label }}
                  </a>
                </li>
              {% endif %}
              {% if block.settings.show_google %}
                <li>
                  <a href="{{ block.settings.google_url }}">
                    <img
                      src="{{ block.settings.google_icon | image_url: '32x32' | default: 'google-icon.svg' | file_url }}"
                      alt="Google+"
                      class="img-fluid"
                      height=""
                      width="" />
                    {{ block.settings.google_label }}
                  </a>
                </li>
              {% endif %}
            </ul>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <div class="footer-wrap footer-mobile-content">
      {% for block in section.blocks %}
        <div class="footer-wrap-content">
          <h4>{{ block.settings.heading }}</h4>
          {% if block.type == 'menu_block' %}
