<section class="cwr-newsletter">
  <div class="container">
    <div class="cwr-newsletter__content">
      <div class="row">
        <div class="col-lg-7">
          <div class="cwr-newsletter__left">
            {%- if section.settings.main_heading != blank -%}
              <h2 class="custom-heading-md">{{ section.settings.main_heading }}</h2>
            {%- endif -%}
            {%- if section.settings.sub_heading != blank -%}
              <h4 class="custom-heading-sm">{{ section.settings.sub_heading }}</h4>
            {%- endif -%}
            <form action="">
              <input
                type="text"
                placeholder="Email address...."
                id="email"
                name="emailaddress">
              {%- if section.settings.button_url != blank -%}
                <a href="{{ section.settings.button_url }}" class="custom-btn">
                  {%- if section.settings.button_text != blank -%}
                    <span>{{ section.settings.button_text }}<svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="15"
                        viewBox="0 0 18 15"
                        fill="none">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M11.3429 0.292893L17.7069 6.65685C18.0974 7.04738 18.0974 7.68054 17.7069 8.07107L11.3429 14.435C10.9524 14.8256 10.3192 14.8256 9.92869 14.435C9.53816 14.0445 9.53816 13.4113 9.92869 13.0208L14.5855 8.36396H0.999756C0.447471 8.36396 -0.000244141 7.91625 -0.000244141 7.36396C-0.000244141 6.81168 0.447471 6.36396 0.999756 6.36396H14.5855L9.92869 1.70711C9.53816 1.31658 9.53816 0.683418 9.92869 0.292893C10.3192 -0.0976311 10.9524 -0.0976311 11.3429 0.292893Z"
                          fill="black" />
                      </svg>
                    </span>
                  {%- endif -%}
                </a>
              {%- endif -%}
            </form>
          </div>
        </div>
      </div>
      <div class="cwr-newsletter__right">
        <div class="cwr-newsletter__right-img">
          {%- if section.settings.desktop_img != blank -%}
            <img
              data-src="{{ section.settings.desktop_img | image_url }}"
              alt="cwr-img-content-img"
              class="img-fluid lazyload desktop-img"
              width="437"
              height="447">
          {%- endif -%}
          {%- if section.settings.mobile_img != blank -%}
            <img
              data-src="{{ section.settings.mobile_img |  image_url  }}"
              alt="cwr-img-content-img"
              class="img-fluid lazyload mobile-img"
              width="640"
              height="509">
          {%- endif -%}
          <div class="cwr-newsletter__right-img2">
            {%- if section.settings.desktop_img_2 != blank -%}
                <img
                  data-src="{{ section.settings.desktop_img_2 | image_url }}"
                  alt="cwr-newsletter-img"
                  class="img-fluid lazyload"
                  width="205"
                  height="205">
            {%- endif -%}
            {%- if section.settings.desktop_img_3 != blank -%}
                <img
                  src="{{ section.settings.desktop_img_3 | image_url }}"
                  alt="cwr-newsletter -img"
                  class="img-fluid since-year"
                  height=""
                  width="">
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Custom Newsletter",
    "settings": [
      {
        "type": "text",
        "label": "Main Heading",
        "id": "main_heading",
        "default": "SUBSCRIBE FOR EXCLUSIVE UPDATES"
      },
      {
        "type": "text",
        "label": "Sub Heading",
        "id": "sub_heading",
        "default": "Be the first to know about our latest products, offers, and exclusive content."
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "button_text",
        "default": "Subscibe"
      },
      {
        "type": "url",
        "label": "Button URL",
        "id": "button_url"
      }, {
        "type": "image_picker",
        "label": "Newsletter Desktop Image",
        "id": "desktop_img"
      }, {
        "type": "image_picker",
        "label": "Newsletter Desktop Image",
        "id": "desktop_img_2"
      }, {
        "type": "image_picker",
        "label": "Newsletter Desktop Image",
        "id": "desktop_img_3"
      }, {
        "type": "image_picker",
        "label": "Newsletter Mobile Image",
        "id": "mobile_img"
      }
    ],
    "presets": [
      {
        "name": "Custom Newsletter"
      }
    ]
  }
{% endschema %}