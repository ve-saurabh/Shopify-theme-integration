<section class="cwr-img-content cwr-img-content--creations ">
    <div class="container">
        <div class="cwr-img-content__left">
            <div class="cwr-img-content__left-img">
                {%- if section.settings.image != blank -%}                    
                    <img data-src="{{ section.settings.image | image_url }}" alt="cwr-img-content-img" class="img-fluid lazyload"
                        width="892" height="758">
                {%- endif -%}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-7">
                <div class="cwr-img-content__right">
                    <div class="cwr-rating">
                        <ul>
                            {%- for i in (1..5) -%}
                                <li><img src="{{ 'rating-star.svg' |  file_url }}" alt="star icon" class="img-fluid" height="" width="" /></li>
                            {%- endfor -%}
                        </ul>
                        <span>{{ section.settings.rating }}</span>
                    </div>
                    {%- if section.settings.main_heading  != blank -%}
                        <h3>{{ section.settings.main_heading }}</h3>
                    {%- endif -%}
                    {%- if section.settings.sub_heading_1 != blank -%}
                        <h2 class="custom-heading-md">{{ section.settings.sub_heading_1 }}</h2>
                    {%- endif -%}
                    {%- if section.settings.sub_heading_2 != blank -%}
                        <h4 class="custom-heading-sm">{{ section.settings.sub_heading_2 }}</h4>
                    {%- endif -%}
                    {%- if section.settings.btn_link != blank -%}                        
                        <a href="{{ section.settings.btn_link }}" class="custom-btn">
                            {%- if section.settings.btn_text != blank -%}                                
                                <span>{{ section.settings.btn_text }}<svg xmlns="http://www.w3.org/2000/svg" width="18" height="15"
                                        viewBox="0 0 18 15" fill="none">
                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                            d="M11.3429 0.292893L17.7069 6.65685C18.0974 7.04738 18.0974 7.68054 17.7069 8.07107L11.3429 14.435C10.9524 14.8256 10.3192 14.8256 9.92869 14.435C9.53816 14.0445 9.53816 13.4113 9.92869 13.0208L14.5855 8.36396H0.999756C0.447471 8.36396 -0.000244141 7.91625 -0.000244141 7.36396C-0.000244141 6.81168 0.447471 6.36396 0.999756 6.36396H14.5855L9.92869 1.70711C9.53816 1.31658 9.53816 0.683418 9.92869 0.292893C10.3192 -0.0976311 10.9524 -0.0976311 11.3429 0.292893Z"
                                            fill="black" />
                                    </svg>
                                </span>
                            {%- endif -%}
                        </a>
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Custom Image Content 2",
    "settings": [
        {
            "type": "image_picker",
            "label": "Select Image",
            "id": "image"
        },
        {
            "type": "text",
            "label": "Main Heading",
            "id": "main_heading",
            "default": "WHY LET THE INSPIRATION LINGER?"
        },
        {
            "type": "text",
            "label": "Sub Heading 1",
            "id": "sub_heading_1",
            "default": "YOUR CREATIVE ARSENAL IS JUST A CLICK AWAY!"
        },
        {
            "type": "text",
            "label": "Sub Heading 2",
            "id": "sub_heading_2",
            "default": "Seize the spray can, grab the markers – your canvas is calling! Explore our shop now and discover the tools that will bring your vision to life."
        },
        {
            "type": "text",
            "label": "Button Text",
            "id": "btn_text",
            "default": "Shop best sellers"
        },
        {
            "type": "url",
            "label": "Button Link",
            "id": "btn_link"
        },
        {
            "type": "text",
            "label": "Ratings",
            "id": "rating",
            "default": "Rated <b>4.9/5 </b> by <b>Thousands</b> of Happy Customers"
        }
    ],
    "presets": [
      {
        "name": "Custom Image Content 2",
        "settings": {
            "main_heading": "WHY LET THE INSPIRATION LINGER?",
            "sub_heading_1": "YOUR CREATIVE ARSENAL IS JUST A CLICK AWAY!",
            "sub_heading_2": "Seize the spray can, grab the markers – your canvas is calling! Explore our shop now and discover the tools that will bring your vision to life.",
            "btn_text": "Shop best sellers"
        }
      }
